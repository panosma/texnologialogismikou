    private void BttnequalsActionPerformed(java.awt.event.ActionEvent evt) {                                           
           String answer;
        secondnum = Double.parseDouble(textDisplay.getText());
        if (operations == "+")
        {
            
            result = firstnum + secondnum;
            answer = String.format("%.0f",result);
            textDisplay.setText(answer);
            
        }
        else if (operations == "-")
        {
            
            result = firstnum - secondnum;
            answer = String.format("%.0f",result);
            textDisplay.setText(answer);
            
        }
        else if (operations == "*")
        {
            
            result = firstnum * secondnum;
            answer = String.format("%.0f",result);
            textDisplay.setText(answer);
            
        }
        else if (operations == "%")
        {
            
            result = firstnum % secondnum;
            answer = String.format("%.0f",result);
            textDisplay.setText(answer);
            
        }
    }                                          

    private void BttncommaActionPerformed(java.awt.event.ActionEvent evt) {                                          
